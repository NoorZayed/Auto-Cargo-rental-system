<resources>
    <!-- Custom style for CardView -->
    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@drawable/card_background</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Custom style for TextViews -->
    <style name="CustomTextView">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Custom style for Button -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#1DA823</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>
