<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redd"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:text="Update Car Details"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/button"
            android:layout_width="81dp"
            android:layout_height="54dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:text="Upload Image"
            app:icon="@android:drawable/stat_sys_upload" />
    </LinearLayout>

    <EditText
        android:id="@+id/carBrandrSpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Brand"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/locationtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Location"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/carYearspin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Year Model"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/seatsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Seats Number"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/carTransmition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Transmission"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/carFuel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Motor Fuel"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/CarPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Offered Price"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:padding="8dp" />

    <Button
        android:id="@+id/updatebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        android:padding="12dp"
        android:text="Update"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#686767"
            android:minHeight="48dp"
            android:text="Back"
            android:textColor="#FFFFFF"
            android:textColorLink="#000000"
            app:icon="@android:drawable/ic_media_rew"
            app:strokeColor="#0E0D0D" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/design_default_color_error"
            android:text="Delete"
            android:textColor="#FFFFFF"
            android:textColorLink="#000000"
            app:icon="@android:drawable/ic_menu_delete"
            app:strokeColor="#0E0D0D" />
    </LinearLayout>

</LinearLayout>
