<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/car_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/car_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/car_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/car_year_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/car_seats_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/car_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/car_transmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/car_motor_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/car_offered_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

<!--        <Button-->
<!--            android:id="@+id/delete_button"-->
<!--            android:layout_width="142dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginStart="10dp"-->
<!--            android:layout_marginTop="17dp"-->
<!--            android:layout_marginEnd="30dp"-->
<!--            android:background="@color/design_default_color_error"-->
<!--            android:backgroundTint="@color/design_default_color_error"-->
<!--            android:text="Delete"-->
<!--            android:textColor="#FFFFFF"-->
<!--            android:textColorLink="#000000"-->
<!--            app:icon="@android:drawable/ic_menu_delete"-->
<!--            app:strokeColor="#0E0D0D" />-->

        <Button
            android:id="@+id/update_button"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="228dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/orange"
            android:text="Update"
            android:textColor="#FFFFFF"
            android:textColorLink="#000000"
            app:icon="@android:drawable/ic_menu_edit"
            app:strokeColor="#0E0D0D" />

    </LinearLayout>

</LinearLayout>
