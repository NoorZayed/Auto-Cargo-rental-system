<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rcardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/carImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="Car Image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/carId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Car ID"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/yearModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year Model"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/seatsNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seats Number"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/transmission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transmission"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/motorFuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motor Fuel"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/offeredPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offered Price"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/isRented"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is Rented"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
